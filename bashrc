export PATH="$HOME/Library/Haskell/bin:$PATH"

export PATH="$PATH:/snap/bin"

source ~/.nvm/nvm.sh

# export HISTSIZE=10000

# export HISTFILESIZE=10000

source ~/.bin/tmuxinator.bash
